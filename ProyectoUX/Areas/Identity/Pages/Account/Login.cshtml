@page
@model LoginModel

@{
    ViewData["Title"] = "Ingresar";
}

<div class="row">

    <div class="col align-self-start">
    </div>
    <div class="col align-self-center">
        <h2>@ViewData["Title"]</h2>
    </div>
    <div class="col align-self-end">
    </div>
</div>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h4>Usa tu cuenta.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Ingresar</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="">Olvidaste tu contraseña?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Crear una nueva cuenta</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-5">
        <div class="row">
            <div class="col-md-5">
                <h4>Ingresar con twitter</h4>
                <hr />
            </div>
        </div>
        <div class="row">
            <div class="col-md-5">
                <a href="https://twitter.com/login?lang=es" target="_blank"><p> <i id="iconloginTwitter" class="fab fa-twitter"></i></p></a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
